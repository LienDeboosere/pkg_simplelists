<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" method="upgrade">
    <name>MOD_SIMPLELISTS_ITEMS</name>
    <author>Yireo</author>
    <authorEmail>info@yireo.com</authorEmail>
    <authorUrl>http://www.yireo.com/</authorUrl>
    <creationDate>November 2011</creationDate>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.6.0.4d</version>
    <description>MOD_SIMPLELISTS_ITEMS_DESC</description>

    <files>
        <filename module="mod_simplelists_items">mod_simplelists_items.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>

    <media folder="media">
        <folder>mod_simplelists_items</folder>
    </media>

	<languages>
		<language tag="en-GB">en-GB.mod_simplelists_items.ini</language>
		<language tag="en-GB">en-GB.mod_simplelists_items.sys.ini</language>
	</languages>

    <config>
        <fields name="params">
            <fieldset name="basic" label="MOD_SIMPLELISTS_FIELDSET_BASIC" addfieldpath="/administrator/components/com_simplelists/fields">
                <field name="category_id" type="category" extension="com_simplelists" default="0" label="MOD_SIMPLELISTS_FIELD_CATEGORY_ID" description="MOD_SIMPLELISTS_FIELD_CATEGORY_ID_DESC" />
                <field name="count" type="text" default="5" label="MOD_SIMPLELISTS_FIELD_COUNT" description="MOD_SIMPLELISTS_FIELD_COUNT_DESC" />
                <field name="ordering" type="list" default="latest" label="MOD_SIMPLELISTS_FIELD_ORDERING" description="MOD_SIMPLELISTS_FIELD_ORDERING_DESC">
                    <option value="order">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_ORDER</option>
                    <option value="date">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_DATE</option>
                    <option value="rdate">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_RDATE</option>
                    <option value="alpha">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_ALPHA</option>
                    <option value="ralpha">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_RALPHA</option>
                    <option value="random">MOD_SIMPLELISTS_FIELD_ORDERING_OPTION_RANDOM</option>
                </field>
            </fieldset>
            <fieldset name="items" label="MOD_SIMPLELISTS_FIELDSET_ITEMS">
                <field name="show_title" type="list" default="1" label="MOD_SIMPLELISTS_FIELD_SHOW_TITLE" description="MOD_SIMPLELISTS_FIELD_SHOW_TITLE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="show_text" type="list" default="0" label="MOD_SIMPLELISTS_FIELD_SHOW_TEXT" description="MOD_SIMPLELISTS_FIELD_SHOW_TEXT_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="show_image" type="list" default="0" label="MOD_SIMPLELISTS_FIELD_SHOW_IMAGE" description="MOD_SIMPLELISTS_FIELD_SHOW_IMAGE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="image_align" type="list" default="left" label="MOD_SIMPLELISTS_FIELD_IMAGE_ALIGN" description="MOD_SIMPLELISTS_FIELD_IMAGE_ALIGN_DESC">
                    <option value="left">MOD_SIMPLELISTS_FIELD_IMAGE_ALIGN_OPTION_LEFT</option>
                    <option value="right">MOD_SIMPLELISTS_FIELD_IMAGE_ALIGN_OPTION_RIGHT</option>
                    <option value="none">MOD_SIMPLELISTS_FIELD_IMAGE_ALIGN_OPTION_NONE</option>
                </field>
                <field name="link_title" type="list" default="0" label="MOD_SIMPLELISTS_FIELD_LINK_TITLE" description="MOD_SIMPLELISTS_FIELD_LINK_TITLE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="link_image" type="list" default="0" label="MOD_SIMPLELISTS_FIELD_LINK_IMAGE" description="MOD_SIMPLELISTS_FIELD_LINK_IMAGE_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
            <fieldset name="layout" label="MOD_SIMPLELISTS_FIELDSET_LAYOUT">
                <field name="style" type="list" default="default" label="MOD_SIMPLELISTS_FIELD_STYLE" description="MOD_SIMPLELISTS_FIELD_STYLE_DESC">
                    <option value="default">MOD_SIMPLELISTS_FIELD_STYLE_OPTION_DEFAULT</option>
                    <option value="advanced">MOD_SIMPLELISTS_FIELD_STYLE_OPTION_ADVANCED</option>
                </field>
                <field name="layout" type="list" default="none" label="MOD_SIMPLELISTS_FIELD_LAYOUT" description="MOD_SIMPLELISTS_FIELD_LAYOUT_DESC">
                    <option value="none">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_NONE</option>
                    <option value="basic">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_BASIC</option>
                    <option value="default">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_DEFAULT</option>
                    <option value="hover">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_HOVER</option>
                    <option value="picture">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_PICTURE</option>
                    <option value="table">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_TABLE</option>
                    <option value="toggle">MOD_SIMPLELISTS_FIELD_LAYOUT_OPTION_TOGGLE</option>
                </field>
                <field name="menu_id" type="menuitem" default="" label="MOD_SIMPLELISTS_FIELD_MENU_ID" description="MOD_SIMPLELISTS_FIELD_MENU_ID_DESC" />
                <field name="readmore_label" type="text" default="Read More" label="MOD_SIMPLELISTS_FIELD_READMORE_LABEL" description="MOD_SIMPLELISTS_FIELD_READMORE_LABEL_DESC" />
            </fieldset>
            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text" default="" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">Use global</option>
                    <option value="0">No caching</option>
                </field>
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
            </fieldset>
        </fields>
    </config>
</extension>
